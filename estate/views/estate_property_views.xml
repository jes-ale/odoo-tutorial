<?xml version="1.0"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Estate action</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tutorial component
            </p>
        </field>
    </record>

    <record id="estate_poperty_view_tree" model="ir.ui.view">
        <field name="name">estate_property_tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Propiedad">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property_form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title row">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                        <field name="active" invisible="1"/>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <label for="postcode"/>
                                </div>
                                <div class="col-4">
                                    <field name="postcode"/><br/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label for="date_availability"/>   
                                </div>
                                <div class="col-4">
                                    <field name="date_availability"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <label for="expected_price"/>
                                </div>
                                <div class="col-4">
                                    <field name="expected_price"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label for="selling_price"/>
                                </div>
                                <div class="col-4">
                                    <field name="selling_price"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <div class="row">
                                <div class="row">
                                    <div class="col-2">
                                        <label for="description"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="description"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="bedrooms"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="bedrooms"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="living_area"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="living_area"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="facades"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="facades"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="garage"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="garage"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="garden"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="garden"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="garden_area"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="garden_area"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <label for="garden_orientation"/>
                                    </div>
                                    <div class="col-2">
                                        <field name="garden_orientation"/>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_property_search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Search Opportunities">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                <filter string="Available Properties" name="state" domain="[('state', '=', 'New'), ('state', '=', 'offer received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>