<?xml version="1.0"?>
<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Estate action</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tutorial component
            </p>
        </field>
    </record>

    <record id="estate_poperty_view_tree" model="ir.ui.view">
        <field name="name">estate_property_tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Propiedad">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property_form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title row">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                        <field name="active" invisible="1"/>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <label for="postcode"/><br/>                            
                            <label for="date_availability"/>                        
                        </div>
                        <div class="col-4">
                            <field name="postcode"/><br/>
                            <field name="date_availability"/>
                        </div>
                        <div class="col-2">
                            <label for="expected_price"/><br/>
                            <label for="selling_price"/>
                        </div>
                        <div class="col-4">
                            <field name="expected_price"/><br/>
                            <field name="selling_price"/>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <div class="row">
                                <div class="col-2">
                                    <label for="description"/><br/><br /><br />
                                    <label for="bedrooms"/><br/><br />
                                    <label for="living_area"/><br/><br />
                                    <label for="facades"/><br/><br />
                                    <label for="garage"/><br/><br />
                                    <label for="garden"/><br/><br />
                                    <label for="garden_area"/><br/><br />
                                    <label for="garden_orientation"/>
                                </div>
                                <div class="col-2">
                                    <field name="description"/><br/>
                                    <field name="bedrooms"/><br/>
                                    <field name="living_area"/><br/>
                                    <field name="facades"/><br/>
                                    <field name="garage"/><br/>
                                    <field name="garden"/><br/>
                                    <field name="garden_area"/><br/>
                                    <field name="garden_orientation"/>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>