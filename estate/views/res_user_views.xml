<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="res_users_view_form_inherit_estate" model="ir.ui.view">
            <field name="name">res_users_view_form_inherit_estate</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page string="Real Estate Properties">
                        <field name="property_ids" widget="section_and_note_one2many" mode="tree,kanban">
                            <tree editable="bottom" decoration-danger="offers_id.status == 'refused'" decoration-success="offers_id.status == 'accepted'">
                                <field name="name" />
                                <field name="property_type_id" />
                                <field name="postcode" />
                                <field name="tags_ids" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="expected_price" />
                                <field name="selling_price" />
                                <field name="offers_id.status" invisible="1" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>